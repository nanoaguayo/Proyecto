<div>
	<h1>Bloquear usuario</h1>
</div>
<%= form_tag admin_block_path, id: "user-form"%>
<div class: "Sign_Form">
	<div class="form-control">
      <%= label_tag(:username, 'Ingrese usuario a bloquear') %>
      <%= text_field_tag(:username, nil, placeholder: "Ej: user123", id: "username-input") %>
      <span class="be-red"><p id="message-user"></p></span>
    </div>
    <div class="form-control">
      <%= submit_tag("Bloquear") %>
    </div>
    </br>
    <span class="mensaje"><%= @error%></span>
</div>